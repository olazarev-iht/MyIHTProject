@using System.Globalization
@inherits LayoutComponentBase

<MudRTLProvider RightToLeft="@CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft">
    <MudThemeProvider/>
    <MudDialogProvider/>
    <MudSnackbarProvider/>

    <PageTitle>BlazorServerHost</PageTitle>

    <MudLayout>

        <MudAppBar>
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
                           OnClick="@((e) => ToggleMenu())" />
            <MudText Typo="Typo.h5">Blazor Examples</MudText>

            <MudSpacer />
            <LoginDisplay />

        </MudAppBar>

        <MudDrawer Open="@_menuExpanded" ClipMode="DrawerClipMode.Docked" Class="menu_hide_my">
            <NavMenu />
        </MudDrawer>

        <MudMainContent>
            <MudContainer Class="mt-16">
                @Body
            </MudContainer>
        </MudMainContent>

    </MudLayout>

</MudRTLProvider>

@code
{
    private bool _menuExpanded = true;

    private void ToggleMenu()
    {
        _menuExpanded = !_menuExpanded;
    }
}
